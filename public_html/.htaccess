AddType audio/x-wav wav
AddType audio/mpeg mp3

<IfModule mod_php5.c>
	php_value upload_max_filesize 50M
	php_value post_max_size 50M
</IfModule>

##############Expiration des images##################
ExpiresActive On
ExpiresByType image/gif A2592000
ExpiresByType image/png A2592000
ExpiresByType image/jpg A2592000
ExpiresByType image/jpeg A2592000
ExpiresByType image/x-icon A2592000


RewriteEngine On

RewriteBase /

##############Forcer les www##################
RewriteCond %{HTTP_HOST} ^ledomaine\.com$ [NC]
RewriteRule ^(.*)$ http://www\.ledomaine\.com/$1 [L,R=301]

##############Forcer sans www##################
#RewriteCond %{HTTP_HOST} ^www\.ledomaine\.com$ [NC]
#RewriteRule ^(.*)$ http://ledomaine\.com/$1 [L,R=301]


##############Si le fichier ou dossier existe on skip##################
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule "." - [skip=100]


##############Redirection des images en cache##################
RewriteCond %{REQUEST_URI} ^/resizer/
RewriteCond %{REQUEST_URI} !^.*//.*$
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{QUERY_STRING} !.*=.*
RewriteCond %{DOCUMENT_ROOT}/statics/photos/_cache/$1 -f
RewriteRule ^resizer/(.*) /statics/photos/_cache/$1 [L]
##############



RewriteRule ^(.*)$ index.php [QSA,L]
